<Application
    x:Class="MoneyFox.Uwp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:presentation="using:MoneyFox.Presentation">

    <Application.Resources>
        <ResourceDictionary>
            <presentation:ViewModelLocator x:Key="Locator" />

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <ResourceDictionary.MergedDictionaries>
                        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls"/>
                        <ResourceDictionary Source="Style/ColorsLight.xaml" />
                        <ResourceDictionary Source="Style/AppStyles.xaml" />
                        <ResourceDictionary Source="Style/TextStyles.xaml" />
                        <ResourceDictionary Source="Style/ControlStyles.xaml" />
                        <ResourceDictionary Source="Style/_Thickness.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>

                <ResourceDictionary x:Key="Dark">
                    <ResourceDictionary.MergedDictionaries>
                        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls"/>
                        <ResourceDictionary Source="Style/ColorsDark.xaml" />
                        <ResourceDictionary Source="Style/AppStyles.xaml" />
                        <ResourceDictionary Source="Style/TextStyles.xaml" />
                        <ResourceDictionary Source="Style/ControlStyles.xaml" />
                        <ResourceDictionary Source="Style/_Thickness.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>

                <ResourceDictionary x:Key="Light">
                    <ResourceDictionary.MergedDictionaries>
                        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls"/>
                        <ResourceDictionary Source="Style/ColorsLight.xaml" />
                        <ResourceDictionary Source="Style/AppStyles.xaml" />
                        <ResourceDictionary Source="Style/TextStyles.xaml" />
                        <ResourceDictionary Source="Style/ControlStyles.xaml" />
                        <ResourceDictionary Source="Style/_Thickness.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>