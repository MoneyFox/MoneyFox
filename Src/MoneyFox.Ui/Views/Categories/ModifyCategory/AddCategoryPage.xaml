<?xml version="1.0" encoding="utf-8"?>

<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resources="clr-namespace:MoneyFox.Ui.Resources.Strings"
    xmlns:modifyCategory="clr-namespace:MoneyFox.Ui.Views.Categories.ModifyCategory"
    x:DataType="modifyCategory:AddCategoryViewModel"
    Title="{x:Static resources:Translations.AddCategoryTitle}"
    x:Class="MoneyFox.Ui.Views.Categories.ModifyCategory.AddCategoryPage">

    <ScrollView Padding="15,0,15,0">
        <VerticalStackLayout Spacing="12">
            <modifyCategory:ModifyCategoryContentView />
            <Button Command="{Binding SaveCommand}"
                    CommandParameter="{Binding SelectedCategory.IsValid}"
                    Text="{x:Static resources:Translations.SaveLabel}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>