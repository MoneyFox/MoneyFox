<Page x:Class="MoneyManager.Views.AddAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:userControls="using:MoneyManager.UserControls"
      xmlns:converter="using:MoneyManager.Business.Converter"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      DataContext="{Binding AddAccountView, Source={StaticResource Locator}}"
      mc:Ignorable="d">

    <Page.Resources>
        <converter:AmountConverter x:Key="AmountConverter" />
        <converter:BooleanToVisibilityConverter x:Key="BooleanVisibilityConverter" />
    </Page.Resources>

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <ContinuumNavigationTransitionInfo />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <Page.BottomAppBar>
        <CommandBar Background="{StaticResource PhoneAccentBrush}"
                    RequestedTheme="Dark">
            <AppBarButton Icon="Accept" x:Uid="Done" Label="Done" Click="DoneClick" />
            <AppBarButton Icon="Cancel" x:Uid="Cancel" Label="Cancel" Click="CancelClick" />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid>
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition />
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="24,17,0,28">
            <TextBlock x:Uid="AccountTitle" Text="Account" Style="{ThemeResource TitleTextBlockStyle}"
                       Typography.Capitals="SmallCaps" />
            <TextBlock x:Uid="Add" Text="Add" Margin="0,12,0,0" Style="{ThemeResource HeaderTextBlockStyle}" />
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="12,0,12,0">
            <TextBox Text="{Binding SelectedAccount.Name, Mode=TwoWay}"
                     Header="Name"
                     VerticalAlignment="Top"
                     x:Uid="Name"
                     Margin="0,0,0,12" />
            <TextBox Text="{Binding SelectedAccount.Iban, Mode=TwoWay}"
                     Header="IBAN"
                     VerticalAlignment="Top"
                     x:Uid="Iban"
                     Margin="0,0,0,12" />
            <Grid>
                <TextBox Text="{Binding CurrentBalanceString, Mode=TwoWay, Converter={StaticResource AmountConverter}}"
                         Header="amount"
                         InputScope="Number"
                         x:Uid="Balance"
                         x:Name="TextBoxCurrentBalance"
                         TextAlignment="Right"
                         GotFocus="RemoveZeroOnFocus"
                         LostFocus="AddZeroIfEmpty" />

                <Button MinWidth="40"
                        MinHeight="55"
                        Background="#FF231E1E"
                        BorderThickness="0"
                        Click="OpenSelectCurrencyDialog"
                        Content="{Binding SelectedAccount.Currency}"
                        Margin="2,28,0,6" />
            </Grid>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Visibility="{Binding SelectedAccount.IsExchangeModeActive, Converter={StaticResource BooleanVisibilityConverter}}">

                <TextBlock Text=" ( "
                           Style="{StaticResource MenuItemSubSmallText}" />
                <TextBlock Text="{Binding SelectedAccount.ExchangeRatio}"
                           Style="{StaticResource MenuItemSubSmallText}"
                           TextAlignment="Right" />
                <TextBlock Text=") "
                           Style="{StaticResource MenuItemSubSmallText}" />

                <TextBlock Text="{Binding SelectedAccount.CurrentBalance}"
                           Style="{StaticResource MenuItemSubSmallText}"
                           Margin="5,0,0,0"
                           TextAlignment="Right" />
                <TextBlock Text="{Binding Settings.DefaultCurrency}"
                           Margin="5,0,0,0"
                           Style="{StaticResource MenuItemSubSmallText}" />
            </StackPanel>

            <TextBox Text="{Binding SelectedAccount.Note, Mode=TwoWay}"
                     Header="Notes"
                     VerticalAlignment="Top"
                     x:Uid="Notes"
                     Margin="0,0,-0.167,0"
                     TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Page>